{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,              // Generate .d.ts files
    "declarationDir": "./dist/types", // Optional: Output for declarations
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
